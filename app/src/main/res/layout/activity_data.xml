<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unitn.simob.howsthere.Data"
    android:id="@+id/dataContainerLayout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fui_done_check_mark"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:text="ID ottenuto"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/panoramaCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fui_done_check_mark"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="Panorama pronto"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/panoramaDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fui_done_check_mark"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="Panorama Scaricato"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/panoramaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fui_done_check_mark"
            android:drawablePadding="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="Nomi montagne scaricati"
            android:textSize="24sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/idErrLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/idErrTitolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="ID non ricevuto"
                android:textColor="@color/fui_bgEmail"
                android:textSize="24sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/idErrDescrizione"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Problemi di connessione con il sito, Controllare connessione e riprovare." />

                <Button
                    android:id="@+id/idErrButton"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="azzeraTentativiID"
                    android:text="Riprova" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/prontoErrLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Panorama non pronto"
                android:textColor="@color/fui_bgEmail"
                android:textSize="24sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Controllare la connessione e riprovare." />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="azzeraTentativiStato"
                    android:text="Riprova" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scaricoErrLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Dati non scaricati"
                android:textColor="@color/fui_bgEmail"
                android:textSize="24sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Controllare la connessione e riprovare." />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="azzeraTentativiScaricamentoPanorama"
                    android:text="Riprova" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scaricoNomiErrLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="Dati non scaricati"
                android:textColor="@color/fui_bgEmail"
                android:textSize="24sp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Controllare la connessione e riprovare." />

                <Button
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:onClick="azzeraTentativiNomiMontagne"
                    android:text="Riprova" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
